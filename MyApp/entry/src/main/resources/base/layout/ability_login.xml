<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$media:dl">
    <Component ohos:height="400px"
               ohos:width="0"/>
    <Text
        ohos:height="match_content"
        ohos:width="850px"
        ohos:text="瑞辛coffee登录"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="32fp"
        ohos:left_margin="120px"
        ohos:top_margin="200px"
        />
    <Text
        ohos:text="用户名："
        ohos:height="match_content"
        ohos:width="250px"
        ohos:text_size="24fp"
        ohos:top_margin="100px"
        ohos:left_margin="80px"
        />
    <TextField
        ohos:id="$+id:textf1"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:hint="请输入用户名..."
        ohos:background_element="#EAEDED"
        ohos:layout_alignment="horizontal_center"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:padding="30px"
        ohos:top_margin="-95px"
        ohos:left_margin="100px"
        />

    <Text

        ohos:text="密    码："
        ohos:height="match_content"
        ohos:width="250px"
        ohos:text_size="24fp"
        ohos:top_margin="100px"
        ohos:left_margin="80px"
        />

    <TextField
        ohos:id="$+id:textf2"
        ohos:height="match_content"
        ohos:width="600px"
        ohos:hint="请输入密码..."
        ohos:background_element="#EAEDED"
        ohos:layout_alignment="horizontal_center"
        ohos:text_color="#708090"
        ohos:text_size="18fp"
        ohos:padding="30px"
        ohos:top_margin="-95px"
        ohos:left_margin="100px"
        />

    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:left_margin="330px">
        <Button
            ohos:id="$+id:btn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="登录"
            ohos:text_size="25fp"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"
            ohos:layout_alignment="horizontal_center"
            ohos:top_margin="20vp"/>

        <Button
            ohos:id="$+id:btn2"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="注册"
            ohos:text_size="25fp"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="160px"
            ohos:top_margin="20vp"/>

    </DirectionalLayout>
    <Text
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text_size="25vp"
        ohos:text_color="#FF0000"
        ohos:bottom_margin="120vp"
        ohos:left_margin="23vp"
        ohos:text="用户名:admin;   密码:123456"/>
</DirectionalLayout>