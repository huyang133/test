<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$media:dl">
    <Component ohos:height="400px"
               ohos:width="0"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <Text
            ohos:text="注册"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text_size="32fp"
            ohos:text_color="#000000"
            ohos:text_alignment="center"
            ohos:top_margin="150px"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="50vp">
        <Text
            ohos:text="用  户  名："
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="24fp"
            ohos:left_margin="60px"/>
        <TextField
            ohos:id="$+id:tfyhm"
            ohos:height="match_content"
            ohos:width="600px"
            ohos:hint="请输入用户名..."
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#708090"
            ohos:text_size="18fp"
            ohos:padding="30px"
            ohos:top_margin="-110px"
            ohos:left_margin="160px"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="20vp">
        <Text
            ohos:text="密        码："
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="24fp"
            ohos:left_margin="60px"
            />
        <TextField
            ohos:id="$+id:tfmm"
            ohos:height="match_content"
            ohos:width="600px"
            ohos:hint="请输入密码..."
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#708090"
            ohos:text_size="18fp"
            ohos:padding="30px"
            ohos:top_margin="-110px"
            ohos:left_margin="160px"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="20vp">
        <Text
            ohos:text="确认密码："
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="24fp"
            ohos:left_margin="60px"
            />
        <TextField
            ohos:id="$+id:tfyzchm"
            ohos:height="match_content"
            ohos:width="600px"
            ohos:hint="请再次输入密码..."
            ohos:background_element="#EAEDED"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#708090"
            ohos:text_size="18fp"
            ohos:padding="30px"
            ohos:top_margin="-110px"
            ohos:left_margin="160px"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:left_margin="330px"
        ohos:top_margin="30vp">
        <Button

            ohos:id="$+id:btnzc"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="立即注册"
            ohos:text_size="20fp"
            ohos:padding="20vp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#0EAB8D"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="60px"/>
    </DirectionalLayout>
</DirectionalLayout>